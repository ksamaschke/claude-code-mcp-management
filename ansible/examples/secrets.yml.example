---
# Example secrets file for API keys and tokens
# Copy this to secrets.yml and fill in your actual values
# NEVER commit secrets.yml to version control!

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
github_token: "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Anthropic API Key
# Get from: https://console.anthropic.com/
anthropic_api_key: "sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
openai_api_key: "sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Slack API Token
# Create at: https://api.slack.com/apps
slack_token: "xoxb-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# PostgreSQL connection details
postgres_connection_string: "postgresql://user:password@localhost:5432/dbname"

# Usage:
# ansible-playbook manage-mcp.yml -e @config.yml -e @secrets.yml